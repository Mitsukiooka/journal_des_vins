%section#mu-restaurant-menu
  .container
    .row
      .col-md-12
        .mu-restaurant-menu-area
          .mu-title
            %span.mu-subtitle Discover
            %h2 YOUR WINE
          .mu-restaurant-menu-content
            %ul.nav.nav-tabs.mu-restaurant-menu
              %li.active
                %a{"data-toggle" => "tab", :href => "#all"} All
              %li
                %a{"data-toggle" => "tab", :href => "#red"} Red
              %li
                %a{"data-toggle" => "tab", :href => "#white"} White
              %li
                %a{"data-toggle" => "tab", :href => "#sparkling"} Sparkling
              %li
                %a{"data-toggle" => "tab", :href => "#rose"} Rose
            / Tab panes
            .tab-content
              #all.tab-pane.fade.in.active
                .mu-tab-content-area
                  .row
                    .col-md-6
                      .mu-tab-content-left
                        =render 'all'
            .tab-content
              #red.tab-pane.fade.in.active
                .mu-tab-content-area
                  .row
                    .col-md-6
                      .mu-tab-content-left
                        =render 'red'
            .tab-content
              #white.tab-pane.fade.in.active
                .mu-tab-content-area
                  .row
                    .col-md-6
                      .mu-tab-content-left
                        =render 'white'
            .tab-content
              #sparkling.tab-pane.fade.in.active
                .mu-tab-content-area
                  .row
                    .col-md-6
                      .mu-tab-content-left
                        =render 'sparkling'
            .tab-content
              #rose.tab-pane.fade.in.active
                .mu-tab-content-area
                  .row
                    .col-md-6
                      .mu-tab-content-left
                        =render 'rose'
  .container
    -if user_signed_in?
      =link_to 'Add new wine', new_login_wine_path, class: 'btn submitbtn'
    =paginate @wines                     