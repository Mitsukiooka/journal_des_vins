%section#mu-restaurant-menu
  .mu-title
    %span.mu-subtitle Your Wines
  .mu-restaurant-menu-content
    %ul.nav.nav-tabs.mu-restaurant-menu
      %li
        %a{"data-toggle" => "tab", :href => "#all"} All
      %li.active
        %a{"data-toggle" => "tab", :href => "#red"} Red
      %li
        %a{"data-toggle" => "tab", :href => "#white"} White
      %li
        %a{"data-toggle" => "tab", :href => "#sparkling"} Sparkling
      %li
        %a{"data-toggle" => "tab", :href => "#rose"} Rose
    / Tab panes
    .tab-content
      #all.tab-pane.fade.in
        %ul
        -@wines.each do |wine|
          %li
            .media
              .img
                -if wine.image.present?
                  =image_tag wine.image.variant(gravity: :center, resize:"350x350^", crop:"350x350+0+0").processed
              .text
                %h2=link_to "#{wine.name}/#{wine.year}", wine_path(wine)
                %span.mu-menu-price="#{wine.price}円"
                %p=wine.comments
