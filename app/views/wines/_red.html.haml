%ul
  -@wines.red.each do |wine|
    %li.mu-menu-item-nav
      .media
        .img
          -if wine.image.present?
            =image_tag wine.image.variant(gravity: :center, resize:"640x480^", crop:"640x480+0+0").processed
        .text
          %h2=link_to "#{wine.name}/#{wine.year}", wine_path(wine)
          %span.mu-menu-price="#{wine.price}å††"
          %p=wine.comments